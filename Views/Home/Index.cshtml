@model UserValidator
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/Format.css"/>
    <title>LogReg</title>
</head>
<body>
    <div id="container">
        <div class="logRegPositionDiv">
            <h1>Register</h1>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div class="logRegFormIndDivPosition">
                    <span asp-validation-for="First_Name"></span>
                    <span>@ViewBag.notLetter</span>
                    <p>First Name: </p>
                    <input type="text" asp-for="First_Name">
                </div>

                <div class="logRegFormIndDivPosition">
                    <span asp-validation-for="Last_Name"></span>
                    <span>@ViewBag.notLetterLast</span>
                    <p>Last Name: </p>
                    <input type="text" asp-for="Last_Name">
                </div>

                <div class="logRegFormIndDivPosition">
                    <span asp-validation-for="Email"></span>
                    <span>@ViewBag.exist</span>
                    <p>Email: </p>
                    <input type="text" asp-for="Email">
                </div>

                <div class="logRegFormIndDivPosition">
                    <span asp-validation-for="Password"></span>
                    <p>Password: </p>
                    <input type="password" asp-for="Password">
                </div>

                <div class="logRegFormIndDivPosition">
                    <span asp-validation-for="Confirm"></span>
                    <p>Confirm Password: </p>
                    <input type="password" asp-for="Confirm">
                </div>

                <input type="submit" name="submit" value="Register" class="logRegSubmitButton">
            </form>

        </div>

        <div class="logRegPositionDiv">
            <h1>Login</h1>

            <form asp-action="Login" asp-controller="Home" method="POST">
                <span>@ViewBag.error</span>
                <span>@ViewBag.Email</span>
                <div class="logRegFormIndDivPosition">
                    <p>Email: </p>
                    <input type="text" asp-for="Email">
                </div>
                <span>@ViewBag.Pass</span>
                <div class="logRegFormIndDivPosition">
                    <p>Password: </p>
                    <input type="password" asp-for="Password">
                </div>

                <input type="submit" name="login" value="Log In" class="logRegSubmitButton">

            </form>
        </div>
        <div class="cfb"></div>
    </div>
</body>
</html>